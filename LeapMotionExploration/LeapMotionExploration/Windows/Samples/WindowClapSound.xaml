<Window x:Class="LeapMotionExploration.Windows.Samples.WindowClapSound"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowClap" Height="300" Width="300">
    <Grid x:Name="cursorContainer">
        <Border Padding="10" DockPanel.Dock="Top">
            <TextBlock  x:Name="textBlockApplicationTitle" FontSize="24" FontWeight="Bold" FontFamily="Segoe WP Black" Foreground="#FF33B5E5"  Text="LeapMotion Exploration : Sound Clap"/>
        </Border>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Rectangle x:Name="left" Width="100" Height="100" Visibility="Hidden" Fill="#FF8800" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="50" />
            <Rectangle x:Name="right" Width="100" Height="100" Visibility="Hidden" Fill="#FF0088" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="50" />
        </StackPanel>

    </Grid>
</Window>
