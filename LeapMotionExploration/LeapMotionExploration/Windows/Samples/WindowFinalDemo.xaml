<Window x:Class="LeapMotionExploration.Windows.Samples.WindowFinalDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:localConverter="clr-namespace:LeapMotionExploration.Windows.Samples.Converter"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="WindowDemo" Height="500" Width="800">
    <Canvas x:Name="cursorContainer" Background="#f9f9f9">
        <Canvas.Resources>
            <localConverter:LeftMenuItemCanvasTopConverter x:Key="leftMenuItemPositionConverter" />
        </Canvas.Resources>
        
        <!-- Left Menu -->
        
        <!-- Color Picker Item -->
        <Rectangle x:Name="colorPickerBackground" Width="120" Height="120" Fill="#d3d3d3" Canvas.Left="10" >
            <Canvas.Top>
                <MultiBinding Converter="{StaticResource leftMenuItemPositionConverter}">
                    <Binding ElementName="cursorContainer" Path="ActualHeight"/>
                    <Binding ElementName="colorPickerBackground" Path="ActualHeight" />
                    <Binding>
                        <Binding.Source>
                            <sys:Double>-115</sys:Double>
                        </Binding.Source>
                    </Binding>
                </MultiBinding>
            </Canvas.Top>
        </Rectangle>

        <Rectangle x:Name="colorPicker" Width="100" Height="100" Fill="#AA66CC" Canvas.Left="20">
            <Canvas.Top>
                <MultiBinding Converter="{StaticResource leftMenuItemPositionConverter}">
                    <Binding ElementName="cursorContainer" Path="ActualHeight"/>
                    <Binding ElementName="colorPicker" Path="ActualHeight" />
                    <Binding>
                        <Binding.Source>
                            <sys:Double>-115</sys:Double>
                        </Binding.Source>
                    </Binding>
                </MultiBinding>                
            </Canvas.Top>
        </Rectangle>
        
        <!-- Preview -->
        <Ellipse x:Name="preview" Width="100" Height="100" Fill="#AA66CC" Canvas.Left="75" >
            <Canvas.Top>
                <MultiBinding Converter="{StaticResource leftMenuItemPositionConverter}">
                    <Binding ElementName="cursorContainer" Path="ActualHeight"/>
                    <Binding ElementName="preview" Path="ActualHeight" />
                    <Binding>
                        <Binding.Source>
                            <sys:Double>0</sys:Double>
                        </Binding.Source>
                    </Binding>
                </MultiBinding>
            </Canvas.Top>
        </Ellipse>


        <!-- Shape Picker Item -->
        <Rectangle x:Name="shapePickerBackground" Width="120" Height="120" Fill="#d3d3d3" Canvas.Left="10" >
            <Canvas.Top>
                <MultiBinding Converter="{StaticResource leftMenuItemPositionConverter}">
                    <Binding ElementName="cursorContainer" Path="ActualHeight"/>
                    <Binding ElementName="shapePickerBackground" Path="ActualHeight" />
                    <Binding>
                        <Binding.Source>
                            <sys:Double>115</sys:Double>
                        </Binding.Source>
                    </Binding>
                </MultiBinding>
            </Canvas.Top>
        </Rectangle>

        <Ellipse x:Name="shapePicker" Width="100" Height="100" Stroke="#000000" StrokeThickness="2" Canvas.Left="20" >
            <Canvas.Top>
                <MultiBinding Converter="{StaticResource leftMenuItemPositionConverter}">
                    <Binding ElementName="cursorContainer" Path="ActualHeight"/>
                    <Binding ElementName="shapePicker" Path="ActualHeight" />
                    <Binding>
                        <Binding.Source>
                            <sys:Double>115</sys:Double>
                        </Binding.Source>
                    </Binding>
                </MultiBinding>
            </Canvas.Top>
        </Ellipse>

        <Rectangle Name="basket" Stroke="Black" StrokeThickness="2" Height="150" Width="150" Canvas.Top="100" Canvas.Left="500" Fill="#33000000" ClipToBounds="True"/>
        
        <!-- Leap Cursor-->
        <Ellipse x:Name="leapCursor" Stroke="Black" StrokeThickness="2" Height="15" Width="15" Fill="#33000000" ClipToBounds="True"/>
    </Canvas>
</Window>
