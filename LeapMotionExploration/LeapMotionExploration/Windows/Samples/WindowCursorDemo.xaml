<Window x:Class="LeapMotionExploration.Windows.Samples.WindowCursorDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowLeftMostCursor" Height="300" Width="300" Background="#FFC8C8C8">
    <Grid x:Name="cursorContainer">
        <Border Padding="10" DockPanel.Dock="Top">
            <TextBlock  x:Name="textBlockApplicationTitle" FontSize="24" FontWeight="Bold" FontFamily="Segoe WP Black" Foreground="#FFFF4444"  Text="LeapMotion Exploration"/>
        </Border>

        <Ellipse x:Name="leapCursor" Stroke="Black" StrokeThickness="5" VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="30" Width="30" Fill="#99FF4444" Margin="0,0,0,0" ClipToBounds="True"/>
    </Grid>
</Window>
